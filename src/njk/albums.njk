{% extends '_templates/base.njk' %}

{% block content %}
<article class="container">
  <h1>Albums of Queen</h1>
  <div class="row">
    {% for album in queen.discography %}
    <div class="col-sm-6 col-lg-4">
      <div class="card mb-4">
        <div class="card-body">
          <img src="../img/discs/{{ album.image }}" class="card-img-top mb-2" alt="...">
          <h5 class="card-title">{{ album.title }}</h5>
          <h6 class="card-text">{{ album.year }}</h6>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
</article>
{% endblock %}
